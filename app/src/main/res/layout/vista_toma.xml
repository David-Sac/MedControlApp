<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        style="@style/card_sintoma">
        <LinearLayout
            style="@style/ly_card_med_diario_a">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/icon_circle"/>
            <LinearLayout
                android:layout_weight="0.5"
                style="@style/ly_txt_med_diario_a">
                <TextView
                    android:textSize="20sp"
                    style="@style/titulo_sintoma"
                    android:text="Repriman"/>
                <TextView
                    android:textSize="18sp"
                    style="@style/subtitulo_sintoma_a"
                    android:text="Una unidad"/>
                <TextView
                    android:textSize="18sp"
                    style="@style/subtitulo_sintoma_b"
                    android:text="Por tomar"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cdcdcd"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:gravity="center_horizontal"
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_margin="0dp"
                    style="@style/titulo_sintoma"
                    android:text="12:30"/>
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_reloj"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>