<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Color_Secundario"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        app:cardElevation="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/layout_horizontal_form"
            android:gravity="center">
            <ImageButton
                android:layout_margin="10dp"
                android:background="@drawable/arrow_left"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:textSize="24sp"
                android:textColor="#54977f"
                android:layout_gravity="center"
                android:text="Hoy, 23 de Enero 2024"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView><AnalogClock
    android:id="@+id/analog_clock"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"/>

    <TextView
        style="@style/text_med_formulario"
        android:text="Nombre:"
        android:layout_marginLeft="20sp"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        style="@style/input">
        <com.google.android.material.textfield.TextInputEditText
            style="@style/input"
            android:id="@+id/et_nombre" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        style="@style/text_med_formulario"
        android:text="@string/p_agg_med_1"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        style="@style/layout_horizontal_form">
        <androidx.cardview.widget.CardView
            style="@style/card_btn_form"
            >
            <LinearLayout
                style="@style/layout_btn_form">
                <TextView
                    style="@style/text_btn_form"
                    android:text="Diario"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            style="@style/card_btn_form"
            >
            <LinearLayout
                style="@style/layout_btn_form">
                <TextView
                    style="@style/text_btn_form"
                    android:text="Personalizar"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>