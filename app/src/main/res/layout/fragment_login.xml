<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">


    <LinearLayout
        style="@style/cajon_login">
        <ImageView
            style="@style/img_login"
            android:background="@drawable/icon_person" />
        <EditText
            style="@style/et_login"
            android:hint="Correo"/>
    </LinearLayout>

    <LinearLayout
        style="@style/cajon_login">
        <ImageView
            style="@style/img_login"
            android:background="@drawable/icon_lock" />
        <EditText
            style="@style/et_login"
            android:hint="Contraseña"/>
    </LinearLayout>
    <Button
        android:onClick="Siguiente"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Iniciar sesión"
        android:backgroundTint="@color/Color_Principal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>
    <Button
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicia con Facebook"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#294a9a"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>
</LinearLayout>