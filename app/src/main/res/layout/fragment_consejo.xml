<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tips.Consejo"
    android:background="@color/Color_Secundario"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        style="@style/card_sintoma">
        <LinearLayout
            style="@style/ly_card_med_diario_a">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/icon_salud"/>
            <LinearLayout
                style="@style/ly_txt_med_diario_a">
                <TextView
                    style="@style/titulo_consejo"
                    android:text="Promoviendo el bienestar: Estrategias"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/card_consejo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/subtitulo_consejo"
                android:text="Alimentacion saludable"/>

            <TextView
                style="@style/parrafo_consejo"
                android:text="Alimentacion saludable"/>

            <TextView
                style="@style/subtitulo_consejo"
                android:text="Alimentacion saludable"/>
            <TextView
                style="@style/parrafo_consejo"
                android:text="Alimentacion saludable"/>

            <TextView
                style="@style/subtitulo_consejo"
                android:text="Alimentacion saludable"/>
            <TextView
                style="@style/parrafo_consejo"
                android:text="Alimentacion saludable"/>

            <TextView
                style="@style/subtitulo_consejo"
                android:text="Alimentacion saludable"/>
            <TextView
                style="@style/parrafo_consejo"
                android:text="Alimentacion saludable"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>